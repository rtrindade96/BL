<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Activity.RelInsp1Activity">

<ImageButton
    android:id="@+id/imgbntDATAREV"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/fundo_input_text"
    android:elevation="6dp"
    android:stateListAnimator="@null"
    app:layout_constraintStart_toEndOf="@+id/editDATAREV"
    app:layout_constraintTop_toBottomOf="@+id/txtTAG"
    app:srcCompat="@drawable/ic_event_grey_24dp" />

<Spinner
    android:id="@+id/spinnerCLIENTE"
    android:layout_width="180dp"
    android:layout_height="36dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="5dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtINSPETOR" />

<Spinner
    android:id="@+id/spinnerTAG"
    android:layout_width="180dp"
    android:layout_height="36dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="5dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtREVESTIMENTO" />

<TextView
    android:id="@+id/txtINSPETOR"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:text="CLIENTE:"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/txtREVESTIMENTO"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:text="TAG:"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/spinnerCLIENTE" />

<TextView
    android:id="@+id/txtHORIMETRO"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:text="DATA DA INSTALAÇÃO:"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/spinnerTAG" />

<TextView
    android:id="@+id/txtTAG"
    android:layout_width="wrap_content"
    android:layout_height="17dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:text="DATA DO REVESTIMENTO:"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editDATAINSTA" />

    <EditText
        android:id="@+id/editDATAINSTA"
        android:layout_width="169dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHORIMETRO"
        tools:background="@drawable/fundo_input_text" />

    <EditText
        android:id="@+id/editDATAREV"
        android:layout_width="169dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTAG"
        tools:background="@drawable/fundo_input_text" />

<Button
    android:id="@+id/bntAVANÇAR"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/fundo_bot"
    android:elevation="6dp"
    android:stateListAnimator="@null"
    android:text="AVANÇAR"
    android:textColor="@android:color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<ImageButton
    android:id="@+id/imgbtnDATAINSTA"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/fundo_input_text"
    android:elevation="6dp"
    android:stateListAnimator="@null"
    app:layout_constraintStart_toEndOf="@+id/editDATAINSTA"
    app:layout_constraintTop_toBottomOf="@+id/txtHORIMETRO"
    app:srcCompat="@drawable/ic_event_grey_24dp" />

</android.support.constraint.ConstraintLayout>